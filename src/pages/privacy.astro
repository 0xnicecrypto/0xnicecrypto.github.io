---
import BaseLayout from '../layouts/BaseLayout.astro';

const currentLocale = Astro.currentLocale || 'en';

const t = {
  en: {
    title: "Privacy Policy",
    lastUpdated: "Last updated: February 2025",
    intro: "This Privacy Policy explains how this website collects and uses information.",
    analyticsTitle: "Analytics",
    analyticsText: "This website uses Google Analytics to understand visitor traffic and page usage. Google Analytics collects:",
    analyticsItems: [
      "Pages you visit",
      "Time spent on each page",
      "Your general location (country/city)",
      "Device and browser information"
    ],
    analyticsCookies: "Google Analytics uses cookies to track this data. You can disable cookies in your browser settings or use browser extensions to block Google Analytics.",
    dataStorage: "Data Storage",
    dataStorageText: "Analytics data is stored by Google and subject to Google's Privacy Policy. I do not collect or store any personal information directly.",
    contactTitle: "Contact",
    contactText: "If you have questions about this privacy policy, you can contact me at:"
  },
  zh: {
    title: "隐私政策",
    lastUpdated: "最后更新：2025年2月",
    intro: "本隐私政策说明本网站如何收集和使用信息。",
    analyticsTitle: "网站分析",
    analyticsText: "本网站使用 Google Analytics 来了解访客流量和页面使用情况。Google Analytics 收集：",
    analyticsItems: [
      "您访问的页面",
      "在每个页面上花费的时间",
      "您的大致位置（国家/城市）",
      "设备和浏览器信息"
    ],
    analyticsCookies: "Google Analytics 使用 Cookie 来追踪这些数据。您可以在浏览器设置中禁用 Cookie，或使用浏览器扩展来阻止 Google Analytics。",
    dataStorage: "数据存储",
    dataStorageText: "分析数据由 Google 存储，并受 Google 隐私政策的约束。我不直接收集或存储任何个人信息。",
    contactTitle: "联系方式",
    contactText: "如果您对本隐私政策有任何疑问，可以通过以下方式联系我："
  }
};

const content = t[currentLocale as keyof typeof t];
---

<BaseLayout title={content.title}>
  <div class="page">
    <h1>{content.title}</h1>
    <p class="last-updated">{content.lastUpdated}</p>
    
    <p>{content.intro}</p>
    
    <h2>{content.analyticsTitle}</h2>
    <p>{content.analyticsText}</p>
    <ul>
      {content.analyticsItems.map(item => <li>{item}</li>)}
    </ul>
    <p>{content.analyticsCookies}</p>
    
    <h2>{content.dataStorage}</h2>
    <p>{content.dataStorageText}</p>
    
    <h2>{content.contactTitle}</h2>
    <p>{content.contactText}</p>
    <p><a href="mailto:your.email@example.com">your.email@example.com</a></p>
  </div>
</BaseLayout>

<style>
  .page {
    max-width: 760px;
    margin: 0 auto;
  }
  
  .last-updated {
    color: var(--comment);
    font-size: 0.9rem;
    margin-top: -10px;
    margin-bottom: 30px;
  }
  
  h2 {
    margin-top: 40px;
    color: var(--accent);
  }
  
  ul {
    margin-left: 4ch;
  }
  
  li {
    margin: 8px 0;
  }
</style>
